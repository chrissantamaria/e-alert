{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "start": "npm run get-env && npm run set-creds",
    "get-env": "firebase functions:config:get > .runtimeconfig.json",
    "set-creds": "cross-env GOOGLE_APPLICATION_CREDENTIALS=creds.json npm run emulators",
    "emulators": "firebase emulators:start --only hosting,functions"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "^8.0.0",
    "firebase-functions": "^3.1.0",
    "phone": "^2.4.2",
    "twilio": "^3.36.0"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "firebase-functions-test": "^0.1.6"
  },
  "private": true
}
